---
// src/shared/Navbar.astro
---

<!-- Navigation -->
<nav class="navbar fixed top-0 w-full z-50">
  <div class="section-container">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold navbar-link">Ghalem Maxime</a>
      </div>

      <!-- Navigation Desktop -->
      <div class="hidden md:flex space-x-8">
        <a href="/#" class="navbar-link">Accueil</a>
        <a href="/#about" class="navbar-link">À propos</a>
        <a href="/#skills" class="navbar-link">Compétences</a>
        <a href="/Projects" class="navbar-link">Projets</a>
        <a href="/ArticlesPage" class="navbar-link">Articles</a>
        <a href="/Contact" class="navbar-link">Contact</a>
      </div>

      <!-- Menu Mobile -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="navbar-link">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu Mobile Dropdown -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 space-y-2">
      <a
        href="/#"
        class="block px-4 py-2 navbar-link rounded-md hover:bg-gray-800/50"
      >
        Accueil
      </a>
      <a
        href="/#about"
        class="block px-4 py-2 navbar-link rounded-md hover:bg-gray-800/50"
      >
        À propos
      </a>
      <a
        href="/#skills"
        class="block px-4 py-2 navbar-link rounded-md hover:bg-gray-800/50"
      >
        Compétences
      </a>
      <a
        href="/Projects"
        class="block px-4 py-2 navbar-link rounded-md hover:bg-gray-800/50"
      >
        Projets
      </a>
      <a
        href="/ArticlesPage"
        class="block px-4 py-2 navbar-link rounded-md hover:bg-gray-800/50"
      >
        Articles
      </a>
      <a
        href="/Contact"
        class="block px-4 py-2 navbar-link rounded-md hover:bg-gray-800/50"
      >
        Contact
      </a>
    </div>
  </div>
</nav>

<script>
  // Menu mobile toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
