---
// src/shared/Navbar.astro
---

<!-- Navigation -->
<nav
  class="fixed top-0 w-full bg-white/90 backdrop-blur-md z-50 border-b border-gray-200"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-gray-900">Ghalem Maxime</a>
      </div>

      <!-- Navigation Desktop -->
      <div class="hidden md:flex space-x-8">
        <a href="/#" class="text-gray-900 hover:text-blue-600 transition-colors"
          >Accueil</a
        >
        <a
          href="/#about"
          class="text-gray-700 hover:text-blue-600 transition-colors"
          >À propos</a
        >
        <a
          href="/#skills"
          class="text-gray-700 hover:text-blue-600 transition-colors"
          >Compétences</a
        >
        <a
          href="/projects"
          class="text-gray-700 hover:text-blue-600 transition-colors">Projets</a
        >
        <a
          href="/articles"
          class="text-gray-700 hover:text-blue-600 transition-colors"
          >Articles</a
        >
        <a
          href="/contact"
          class="text-gray-700 hover:text-blue-600 transition-colors">Contact</a
        >
      </div>

      <!-- Menu Mobile -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-700 hover:text-gray-900"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu Mobile Dropdown -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 space-y-2">
      <a
        href="/#"
        class="block px-4 py-2 text-gray-900 hover:bg-gray-100 rounded-md"
        >Accueil</a
      >
      <a
        href="/#about"
        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-md"
        >À propos</a
      >
      <a
        href="/#skills"
        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-md"
        >Compétences</a
      >
      <a
        href="/projects"
        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-md"
        >Projets</a
      >
      <a
        href="/articles"
        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-md"
        >Articles</a
      >
      <a
        href="/contact"
        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-md"
        >Contact</a
      >
    </div>
  </div>
</nav>

<script>
  // Menu mobile toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>

<style>
  nav {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
</style>
